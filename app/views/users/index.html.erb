<h1>ユーザー一覧</h1>
<% if user_signed_in? %>
<h2><%= current_user.name %>さんこんにちは</h2>
  <% @users.each do |u| %>
  <p><a href="/users/<%= u.id %>"><%= u.name %>さん</a></p>
  <hr>
  <% end %>
  <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to "ユーザーを登録する", new_user_registration_path %>
  <br>
  <%= link_to "ログインする", new_user_session_path %>
<% end %>

<%= link_to "マイページに戻る", user_path(current_user.id) %>　
<%= link_to "投稿一覧に戻る", pictures_path %>