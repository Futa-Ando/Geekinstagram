<%= stylesheet_link_tag "users", :media => "all" %>

<div class="post-container">
  <h2>編集 <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :プロフィール %><br />
      <%= f.text_area :profile, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :画像 %>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :パスワード %> <i>(パスワードを変更しない場合は空白)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %>文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :現在のパスワード %> <i>(あなたを確認するために入力してください)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>


    <table>
    <tr>
      <th>＼</th>
      <th>長所</th>
      <th>短所</th>
      <th>性格</th>
    </tr>
    <tr>
      <td>いいね</td>
      <td><%= f.text_field :depth1, autofocus: true %></td>
      <td><%= f.text_field :depth2, autofocus: true %></td>
      <td><%= f.text_field :depth3, autofocus: true %></td>
    </tr>
    <tr>
      <td>もうすこし</td>
      <td><%= f.text_field :depth4, autofocus: true %></td>
      <td><%= f.text_field :depth5, autofocus: true %></td>
      <td><%= f.text_field :depth6, autofocus: true %></td>
    </tr>
    <tr>
      <td>がんばろう</td>
      <td><%= f.text_field :depth7, autofocus: true %></td>
      <td><%= f.text_field :depth8, autofocus: true %></td>
      <td><%= f.text_field :depth9, autofocus: true %></td>
    </tr>
    <tr>
      <td>だめ</td>
      <td><%= f.text_field :depth10, autofocus: true %></td>
      <td><%= f.text_field :depth11, autofocus: true %></td>
      <td><%= f.text_field :depth12, autofocus: true %></td>
  </tr>
  </table>


    <div class="actions">
      <%= f.submit "編集する" %>
    </div>
  <% end %>

  <h3>アカウントを削除する場合</h3>
  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除しますか？" }, method: :delete %></p>
</div>